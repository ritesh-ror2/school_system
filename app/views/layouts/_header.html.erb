<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <!--<a class="brand" href="#">SchoolSystem</a>-->
      <%= link_to image_tag('logo.png'), root_path, id: "logo" %>
      <div class="container nav-collapse nav_header">
        <ul class="nav nav_header_container">
          <% if !current_user.present? %>
            <li><%=link_to "Sign up", signup_users_path, :class => 'nav_header_icon' %></li>
            <li><%=link_to "Sign in", new_user_session_path, :class => 'nav_header_icon' %></li>
          <% elsif current_user.is_school_administration? %>
            <li><%= link_to "Dashboard",school_administrations_path, :class => 'nav_header_icon' %></li>
            <li><%= link_to "My profile",edit_user_registration_path, :class => 'nav_header_icon' %></li>
