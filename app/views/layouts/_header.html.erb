            <li><%= school_administration_for_student_dashboard %></li>
          <% elsif current_user.is_professor? %>
            <li><%= link_to "Dashboard",professors_path, :class => 'nav_header_icon' %></li>
            <li><%= link_to "My profile",edit_user_registration_path, :class => 'nav_header_icon' %></li>
            <li><%= link_to "Sign out",destroy_user_session_path, :method => :delete, :class => 'nav_header_icon'%></li>

          <% elsif current_user.is_parent? || current_user.is_student? %>
            <li><%= link_to "Dashboard",users_path%></li>
            <% if current_user.is_parent? %>
              <li><%= link_to "Students",new_student_parents_path, :class => 'nav_header_icon' %></li>
            <% end %>  
            <li><%= link_to "My profile",edit_user_registration_path, :class => 'nav_header_icon' %></li>
            <li><%= link_to "Sign out",destroy_user_session_path, :method => :delete, :class => 'nav_header_icon' %></li>  
          <%end%>  
        </ul>
      </div><!--/.nav-collapse -->
      <% if current_user.present? %>
        <b class='user_name'>Hello <%= current_user.name %></b>
      <% end %>  
    </div>
  </div>
</div>
