<div id='show_student_list'>
  <h5>List of the students of your school</h5>
  <table class="table table-striped table-bordered ">
    <thead>
    <tr>
      <th><%= t('Student_name') %></th>
      <th><%= t('Age') %></th>
      <th><%= t('Current Grade') %></th>
      <th><%= t('First Access?') %></th>
      <th><%= t('Active?') %></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <% @all_students.each do |student| %>
        <tr>
          <td><%= link_to student.student_name, users_path(student_id: student.id) %></td>
          <td><%= student.find_age %></td>
          <td><%= student.current_grade%></td>
          <td><%= is_student_first_access student %></td>
          <td><%= set_student_status student%></td>
          <td>
            <%= link_to 'Expand', 'javascript:void(0);', :class => "btn btn-primary", :onclick => 'expand_student_details('+student.id.to_s+')'%>
            <%= link_to show_status(student), change_student_status_school_administrations_path(student_id: student.id), :class => "btn btn-primary", :method => :post %>
            <%= link_to t("Edit"), edit_student_record_school_administrations_path(student_from_excel_id: student), :class => "btn btn-primary" %>
          </td>
        </tr>
        <tr>
          <td id=<%=student.id%> class='student_details' colspan="5">
          <table width="590" >  
            <tr> <th>CPF:</th><td><%= student.cpf%></td> <tr>
            <tr> <th>Name:</th><td><%= student.student_name%></td> <tr>
            <tr> <th>Current Grade:</th><td><%= student.current_grade%></td> <tr>
            <% if student.student.present?%>
              <tr> <th>Email: </th><td><%= student.user.email %></td> <tr>
              <tr> <th>Phoneprifix: </th><td><%= student.user.phoneprefix %></td> <tr>
              <tr> <th>Phoneprifix: </th><td><%= student.user.phone %></td> <tr>
            <% end %>
            <% if student.parents.present? %>
              <% student.parents.each do |parent| %>
                <tr>  
                  <th>Parent name: </th>
                    <td><%= link_to parent.user.name, show_parent_school_administrations_path(parent_id: parent.user_id ) %> <%= link_to "", edit_parent_record_school_administrations_path(parent_id: parent.user_id ), class: 'icon-edit edit_parent' %>
                      <div>
                      <b> Students: </b>
                      <% parent.student_from_excels.each do |student| %>
                        <%= link_to student.student_name.capitalize, users_path(student_id: student.id) %>
                      <%end%>
                      <b></div></b>
                    </td> 
                <tr>
              <%end%>
            <% end %>
            <tr> <th>Birth Day: </th><td><%= student.birth_day.strftime("%d/%m/%Y")%></td> <tr>
          </table>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

