<div id="subject_list" class="span8 move_down">
    <div>
      <%= link_to_function "Back", "history.back()", :class => "btn btn-primary" %>
    </div>
    
    <div>
      <%= form_tag(search_student_school_administrations_path, :method => :get) do %>
        <%= text_field_tag('student_name', nil, placeholder: 'Search students by name') %> 
        <%= submit_tag("search student", :class=>'btn')%>
      <% end %>  
    </div>  
    <h5>List of all the students of your school</h5>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th><%= t('Student_name') %></th>
          <th><%= t('Current Grade') %></th>
          <th><%= t('Show Dashboard') %></th>
          <th><%= t('Show Parents') %></th>
          <th><%= t('Edit Student') %></th>
        </tr>
      </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.student_name%></td>
          <td><%= student.current_grade%></td>
          <td><%= link_to t("Student Dashboart"), users_path(student_id: student.id), :class => "btn btn-primary" %></td>
          <td>
          <% student.parents.each do |parent| %>
            <%= link_to parent.user.name, show_parent_school_administrations_path(parent_id: parent.user_id ), :class => "btn btn-primary" %>
          <% end %>
          </td>
          <td><%= link_to t("Edit"), edit_student_record_school_administrations_path(student_from_excel_id: student), :class => "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
</div>
