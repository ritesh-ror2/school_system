<div id='show_average_and_noshow'>
  <div class="row section1">
    <div id="subject_list" class="table-responsive">
      <table class="table">
        <thead>
          <th><strong><%= t('users.show_average_or_no_show.subject') %></strong></th>
          <th>
            <strong>
              <% if select_default_start_bimester == select_default_end_bimester %>
                <%= t('users.show_average_or_no_show.grade') %>
              <% else %>
                <%= t('users.show_average_or_no_show.average') %>
              <% end %>  
            </strong>
          </th>
        </thead>
        <tbody>
          <% if @subject_average.size > 0 %>
            <% @subject_average.each do |subject,average| %>
              <tr>
                <td><%= subject %></td>
                <td><%= average %></td>
              </tr>
            <% end %>
          <% end %>
          <tr id="overall_average" class="overall_average">
            <% if @subject_average.size > 1 %>
              <% if current_parent || current_professor %>
                <td><%= @student.student_name + t('users.show_average_or_no_show.overall_average') %></td> 
                <td><%= @student_overall_average %></td>
              <%elsif current_student%>
                <td><%= t('users.show_average_or_no_show.your_overall_average') %></td> 
                <td><%= @student_overall_average %></td>
              <%end%>  
            <% end %>  
          </tr>
          <tr id="overall_average" class="overall_average">
            <td><%= t('users.show_average_or_no_show.class_overall_average') %></td> 
            <td><%= @class_overall_average %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>  
  <div class="row section1">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <th><strong><%= t('users.show_average_or_no_show.subject') %></strong></th>
          <th><strong><%= t('users.show_average_or_no_show.no_show') %></strong></th>
        </thead>
        <tbody>
          <%if @total_no_show.size > 0%>
            <% @total_no_show.each do |subject,no_show| %>
              <tr>
                <td><%= subject %></td>
                <td><%= no_show %></td>
              </tr>
            <%end%>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>  
