$("#select_subject").dropdownchecklist("destroy");
$('#select_subject option[value!="select_all"]').remove();
$('#subject_list table > tbody').empty();
<% @grades.each do |grade| %>
  $("#select_subject").append($("<option value='<%= grade.subject_name %>'><%= grade.subject_name %></option>"));
  $('#subject_list table > tbody').append("<tr><td><%= grade.subject_name %></td><td><%= grade.subject_average %></td></tr>");
  $('#overall_average').text('Overall Average:- <%= @average %>');
<% end %>  

$("#select_subject").dropdownchecklist({ emptyText: "Please select subjects.", firstItemChecksAll: true, width: 190, maxDropHeight: 200, icon: {placement:'right'}, onItemClick: function(checkbox, selector){
  justChecked = checkbox.prop("checked");
  $.get('/users/change_subjects?stid='+$("#student_list").val()+'&sub='+checkbox.val()+'&is_checked='+justChecked)
  }});

$('#student_detail').html("<b>Seeing data of student name :- <%= @student.student_name%></b></br><b>School Name:- <%= @student.school.name %></br><b>Grade Name:- <%= @student.current_grade %></b>");
