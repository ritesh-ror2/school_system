<div class="alignment">
  <div class="panel panel-normal">
    <div class="panel-heading">
      <h5 class="panel-title"><%if @schools.size > 0%>Schools<% else %>No School available<%end%><h5>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
          <th>School Name</th>
        </tr>
        </thead>
        <tbody> 
          <%if @schools.size > 0%>
            <% @schools.each do |school| %>
              <tr>
                <td><lable><%= school.name%></lable></td>
              </tr>
            <%end%>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

